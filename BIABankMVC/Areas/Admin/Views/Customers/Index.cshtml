@using BankingSystemMVC.Areas.Admin.Models
@model List<CustomerListViewModel>
@{
    ViewData["Title"] = "Manage Customers";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1><i class="bi bi-people"></i> Manage Customers</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item active">Customers</li>
                </ol>
            </nav>
        </div>
    </div>

    <partial name="_SuccessAlert" />
    <partial name="_ErrorAlert" />
    <partial name="_InfoAlert" />

    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-list"></i> Customer List</h5>
            <span class="badge bg-secondary">Total: @Model.Count</span>
        </div>
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0" id="customersTable">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>KYC Status</th>
                                <th>Status</th>
                                <th>Accounts</th>
                                <th>Joined</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var customer in Model)
                            {
                                <tr>
                                    <td><strong>#@customer.Id</strong></td>
                                    <td>
                                        <strong>@customer.FirstName @customer.LastName</strong>
                                    </td>
                                    <td><small>@customer.Email</small></td>
                                    <td><small>@customer.PhoneNumber</small></td>
                                    <td>
                                        @if (customer.IsKYCVerified)
                                        {
                                            <span class="badge bg-success"><i class="bi bi-check"></i> Verified</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning"><i class="bi bi-clock"></i> Pending</span>
                                        }
                                    </td>
                                    <td>
                                        @switch (customer.Status)
                                        {
                                            case "Active":
                                                <span class="badge bg-success">Active</span>
                                                break;
                                            case "Inactive":
                                                <span class="badge bg-secondary">Inactive</span>
                                                break;
                                            case "Suspended":
                                                <span class="badge bg-danger">Suspended</span>
                                                break;
                                            case "Closed":
                                                <span class="badge bg-secondary">Closed</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@customer.AccountCount</span>
                                    </td>
                                    <td><small>@customer.CreatedAt.ToString("MMM dd, yyyy HH:mm") UTC</small></td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Details" asp-route-id="@customer.Id" class="btn btn-outline-primary" title="View Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Accounts" asp-route-id="@customer.Id" class="btn btn-outline-primary" title="View Accounts">
                                                <i class="bi bi-wallet2"></i>
                                            </a>
                                            @if (User.HasClaim("perm", "transaction.read"))
                                            {
                                                <a asp-action="Transactions" asp-route-id="@customer.Id" class="btn btn-outline-primary" title="View Transactions">
                                                    <i class="bi bi-arrow-left-right"></i>
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5 text-muted">
                    <i class="bi bi-people display-3 mb-3 opacity-50"></i>
                    <h5>No Customers Found</h5>
                    <p>There are no customers in the system yet.</p>
                </div>
            }
        </div>
    </div>
</div>



@section Scripts {
    <script>
        $(document).ready(function() {
            $('#customersTable').DataTable({
                "pageLength": 25,
                "order": [[0, "desc"]],
                "language": {
                    "search": "Search customers:"
                }
            });
        });
    </script>
}
