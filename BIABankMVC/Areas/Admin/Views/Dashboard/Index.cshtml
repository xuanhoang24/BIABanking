@using BankingSystemMVC.Areas.Admin.Models.ViewModels.Dashboard
@model DashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">Admin Dashboard</h1>

            <div class="alert alert-info">
                <strong>Welcome, @(User.Identity?.Name ?? "Admin")!</strong> You are logged in to the Banking System Admin Panel.
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4" id="statsCards">
        @await Html.PartialAsync("_StatsCards", Model.Stats)
    </div>

    <!-- Quick Actions -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5>Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-2">
                            <a asp-area="Admin"
                               asp-controller="Customers"
                               asp-action="Index"
                               class="btn btn-outline-primary btn-block mb-2">
                                <i class="bi bi-people fs-3"></i><br>
                                Manage Customers
                            </a>
                        </div>
                        <div class="col-md-2">
                            <a asp-area="Admin"
                               asp-controller="Accounts"
                               asp-action="Index"
                               class="btn btn-outline-primary btn-block mb-2">
                                <i class="bi bi-wallet2 fs-3"></i><br>
                                View Accounts
                            </a>
                        </div>
                        <div class="col-md-2">
                            <a asp-area="Admin"
                               asp-controller="Kyc"
                               asp-action="Index"
                               class="btn btn-outline-primary btn-block mb-2">
                                <i class="bi bi-file-earmark-check fs-3"></i><br>
                                KYC Review
                            </a>
                        </div>
                        @if (User.HasClaim("perm", "transaction.read"))
                        {
                            <div class="col-md-2">
                                <a asp-area="Admin"
                                   asp-controller="Transactions"
                                   asp-action="Index"
                                   class="btn btn-outline-primary btn-block mb-2">
                                    <i class="bi bi-arrow-left-right fs-3"></i><br>
                                    Transactions
                                </a>
                            </div>
                        }
                        <div class="col-md-2">
                            <a asp-area="Admin"
                               asp-controller="Reports"
                               asp-action="Index"
                               class="btn btn-outline-primary btn-block mb-2">
                                <i class="bi bi-chat-dots fs-3"></i><br>
                                Customer Reports
                            </a>
                        </div>
                        @if (User.HasClaim("perm", "customer.manage"))
                        {
                            <div class="col-md-2">
                                <a asp-area="Admin"
                                   asp-controller="Users"
                                   asp-action="Index"
                                   class="btn btn-outline-primary btn-block mb-2">
                                    <i class="bi bi-person-badge fs-3"></i><br>
                                    Employees
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Recent Activity</h5>
                    <a href="@Url.Action("Index", "Audit", new { area = "Admin" })" class="btn btn-sm btn-outline-primary">
                        <i class="bi bi-box-arrow-up-right"></i> View All
                    </a>
                </div>
                <div class="card-body p-0" id="recentActivity">
                    @await Html.PartialAsync("_RecentActivity", Model.RecentAuditLogs)
                </div>

            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5>System Status</h5>
                </div>
                <div class="card-body text-center">
                    <div class="py-5">
                        <i class="bi bi-hdd-rack display-3 text-muted mb-3"></i>
                        <h4 class="text-muted">Coming Soon</h4>
                        <p class="text-muted">System health monitoring will be available here</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-block {
        width: 100%;
        text-align: center;
        padding: 20px 10px;
    }

    .table th {
        border-top: none;
        font-weight: 600;
    }
    
    .alert-info {
        background-color: var(--bg-subtle);
        border: 1px solid var(--border);
        color: var(--text);
    }
</style>

<script>
    function updateStats() {
        fetch('@Url.Action("GetStats", "Dashboard", new { area = "Admin" })')
            .then(response => response.text())
            .then(html => {
                document.getElementById('statsCards').innerHTML = html;
            })
            .catch(error => console.error('Error updating stats:', error));
    }

    function updateRecentActivity() {
        fetch('@Url.Action("GetRecentActivity", "Dashboard", new { area = "Admin" })')
            .then(response => response.text())
            .then(html => {
                document.getElementById('recentActivity').innerHTML = html;
            })
            .catch(error => console.error('Error updating recent activity:', error));
    }

    setInterval(() => {
        updateStats();
        updateRecentActivity();
    }, 30000);
</script>