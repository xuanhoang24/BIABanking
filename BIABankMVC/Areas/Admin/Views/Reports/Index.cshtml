@using BankingSystemMVC.Areas.Admin.Models.ViewModels.Reports
@model List<AdminReportViewModel>

@{
    ViewData["Title"] = "Customer Reports";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1><i class="bi bi-chat-dots"></i> Customer Reports</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item active">Reports</li>
                </ol>
            </nav>
        </div>
    </div>

<partial name="_SuccessAlert" />
<partial name="_ErrorAlert" />
<partial name="_InfoAlert" />

    @if (Model.Count == 0)
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No reports found.
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-list"></i> Reports List</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Customer</th>
                            <th>Name</th>
                            <th>Title</th>
                            <th>Status</th>
                            <th>Created</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var report in Model)
                        {
                            <tr>
                                <td>@report.Id</td>
                                <td>
                                    <a asp-controller="Customers" asp-action="Details" asp-route-id="@report.CustomerId">
                                        @report.CustomerEmail
                                    </a>
                                </td>
                                <td>@report.Name</td>
                                <td>@report.Title</td>
                                <td>
                                    @switch (report.Status)
                                    {
                                        case AdminReportStatus.Pending:
                                            <span class="badge bg-warning text-dark">Pending</span>
                                            break;
                                        case AdminReportStatus.UnderReview:
                                            <span class="badge bg-info">Under Review</span>
                                            break;
                                        case AdminReportStatus.Resolved:
                                            <span class="badge bg-success">Resolved</span>
                                            break;
                                        case AdminReportStatus.Closed:
                                            <span class="badge bg-secondary">Closed</span>
                                            break;
                                    }
                                </td>
                                <td>@report.CreatedAt.ToString("MMM dd, yyyy 'at' hh:mm tt")</td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@report.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye"></i> View Details
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
