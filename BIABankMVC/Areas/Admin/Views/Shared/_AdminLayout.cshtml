@using BankingSystemMVC.Areas.Admin.Models.Constants
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-CQH1K1EQ6W"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', 'G-CQH1K1EQ6W');
    </script>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Banking System Admin</title>
    <link rel="icon" type="image/x-icon" href="~/SuaLogo.ico" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
</head>
<body class="admin-body">

    <div class="d-flex admin-container">

        <!-- Sidebar -->
        <nav class="admin-sidebar">
            <div class="sidebar-header">
                <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="sidebar-brand">
                    <i class="bi bi-shield-check"></i> Admin Panel
                </a>
            </div>

            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                        <i class="bi bi-speedometer2"></i> Dashboard
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-area="Admin" asp-controller="Customers" asp-action="Index">
                        <i class="bi bi-people"></i> Customers
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="Admin" asp-controller="Accounts" asp-action="Index">
                        <i class="bi bi-wallet2"></i> Accounts
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="Admin" asp-controller="Kyc" asp-action="Index">
                        <i class="bi bi-file-earmark-check"></i> KYC Review
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="Admin" asp-controller="Reports" asp-action="Index">
                        <i class="bi bi-chat-dots"></i> Reports
                    </a>
                </li>
                @if (User.HasClaim("perm", PermissionCodes.CustomerManage))
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="Users" asp-action="Index">
                            <i class="bi bi-person-badge"></i> Employees
                        </a>
                    </li>
                }
                @if (User.HasClaim("perm", "transaction.read"))
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="Transactions" asp-action="Index">
                            <i class="bi bi-arrow-left-right"></i> Transactions
                        </a>
                    </li>
                }

                <li class="nav-item">
                    <a class="nav-link" asp-area="Admin" asp-controller="Audit" asp-action="Index">
                        <i class="bi bi-clock-history"></i> Audit Logs
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link">
                        <i class="bi bi-gear"></i> Settings
                    </a>
                </li>

                <li class="nav-item mt-auto">
                    <a class="nav-link" asp-area="Admin" asp-controller="Auth" asp-action="Logout">
                        <i class="bi bi-box-arrow-right"></i> Logout
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Main Content -->
        <div class="flex-grow-1">

            <!-- Top Navigation -->
            <nav class="navbar navbar-light bg-light border-bottom">
                <div class="container-fluid d-flex align-items-center justify-content-between">

                    <span class="navbar-brand mb-0 h1">@ViewData["Title"]</span>

                    <div class="d-flex align-items-center gap-3">

                        <!-- Time Block -->
                        <div class="time-tabs">
                            <div class="time-tab local-time">
                                <i class="bi bi-clock"></i>
                                <span class="time-label">Local:</span>
                                <span id="localTime" class="time-value">--:--:--</span>
                            </div>

                            <div class="time-separator">|</div>

                            <div class="time-tab utc-time">
                                <i class="bi bi-globe"></i>
                                <span class="time-label">UTC:</span>
                                <span id="utcTime" class="time-value">--:--:--</span>
                            </div>
                        </div>

                        <!-- Admin Dropdown -->
                        <div class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center gap-2"
                               href="#"
                               role="button"
                               data-bs-toggle="dropdown">
                                <i class="bi bi-person-circle fs-5"></i>
                                <strong>@(User.Identity?.Name ?? "Admin User")</strong>
                            </a>

                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" asp-area="Admin" asp-controller="Profile" asp-action="Index"><i class="bi bi-person"></i> Profile</a></li>
                                <li><a class="dropdown-item" asp-area="Admin" asp-controller="Profile" asp-action="ChangePassword"><i class="bi bi-key"></i> Change Password</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" asp-area="Admin" asp-controller="Auth" asp-action="Logout">
                                        <i class="bi bi-box-arrow-right"></i> Logout
                                    </a>
                                </li>
                            </ul>
                        </div>

                    </div>
                </div>
            </nav>

            <!-- Page Content -->
            <main class="p-4">
                @RenderBody()
            </main>

        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        .navbar-brand {
            font-weight: 600;
        }

        .dropdown-menu {
            box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15);
        }

        .time-tabs {
            display: inline-flex;
            align-items: center;
            gap: 12px;
            background: #f8f9fa;
            border: 1px solid #dee2e6;
            border-radius: 8px;
            padding: 8px 14px;
            font-size: 14px;
            white-space: nowrap;
            flex-wrap: nowrap;
        }

            .time-tabs > * {
                flex-shrink: 0;
            }

        .time-tab {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            white-space: nowrap;
            color: #495057;
        }

            .time-tab i {
                font-size: 16px;
            }

        .local-time i {
            color: #000000;
        }

        .utc-time i {
            color: #000000;
        }

        .time-label,
        .time-value {
            white-space: nowrap;
            font-family: "Courier New", monospace;
            font-weight: bold;
        }

        .time-separator {
            color: #dee2e6;
            font-weight: bold;
        }
    </style>

    <script>
        function updateTime() {
            const now = new Date();

            const options = {
                hour: '2-digit',
                minute: '2-digit',
                second: '2-digit',
                hour12: true
            };

            document.getElementById('localTime').textContent =
                now.toLocaleTimeString('en-US', options);

            const utc = new Date(now.getTime() + now.getTimezoneOffset() * 60000);
            document.getElementById('utcTime').textContent =
                utc.toLocaleTimeString('en-US', options);
        }

        updateTime();
        setInterval(updateTime, 1000);
    </script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>
    <script>
        // Real-time updates with SignalR
        const apiUrl = window.location.hostname === 'localhost'
            ? 'http://localhost:5000'
            : window.location.origin;
        const connection = new signalR.HubConnectionBuilder()
            .withUrl(apiUrl + "/notificationHub")
            .configureLogging(signalR.LogLevel.None)
            .build();


        // Prevent reload during form submission or navigation
        let isNavigating = false;
        
        document.addEventListener('submit', function() {
            isNavigating = true;
        });
        
        window.addEventListener('beforeunload', function() {
            isNavigating = true;
        });

        connection.on("ReceiveNotification", () => {
            if (!isNavigating) {
                window.location.reload();
            }
        });

        connection.start()
            .catch(err => console.error("SignalR error:", err));
    </script>

</body>
</html>
