@using BankingSystemMVC.Areas.Admin.Models
@model List<TransactionListViewModel>
@{
    ViewData["Title"] = "All Transactions";
    var filter = ViewBag.Filter as TransactionFilterViewModel ?? new TransactionFilterViewModel();
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1><i class="bi bi-arrow-left-right"></i> All Transactions</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item active">Transactions</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h6 class="text-muted">Total Transactions</h6>
                    <h3>@Model.Count</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h6 class="text-muted">Completed</h6>
                    <h3>@Model.Count(t => t.Status == "Completed")</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h6 class="text-muted">Net Flow Today</h6>
                    @{
                        // Convert local "today" to UTC range
                        var todayLocalStart = DateTime.Today;
                        var todayLocalEnd = todayLocalStart.AddDays(1);
                        var todayUtcStart = todayLocalStart.ToUniversalTime();
                        var todayUtcEnd = todayLocalEnd.ToUniversalTime();
                        
                        var todayCompleted = Model.Where(t => t.CreatedAt >= todayUtcStart && t.CreatedAt < todayUtcEnd && t.Status == "Completed");
                        var deposits = todayCompleted.Where(t => t.Type == "Deposit").Sum(t => t.Amount);
                        var withdrawals = todayCompleted.Where(t => t.Type == "Withdrawal").Sum(t => t.Amount);
                        // Only count external transfers (to different customers)
                        var externalTransfers = todayCompleted.Where(t => t.Type == "Transfer" && t.FromCustomerId != t.ToCustomerId).Sum(t => t.Amount);
                        var payments = todayCompleted.Where(t => t.Type == "Fee").Sum(t => t.Amount);
                        var netFlow = deposits - withdrawals - externalTransfers - payments;
                    }
                    <h3>$@netFlow.ToString("N2")</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h6 class="text-muted">Average Transaction Value</h6>
                    @{
                        var todayTransactions = Model.Where(t => t.CreatedAt >= todayUtcStart && t.CreatedAt < todayUtcEnd && t.Status == "Completed");
                        var todayCount = todayTransactions.Count();
                        var todayTotalVolume = todayTransactions.Sum(t => t.Amount);
                        var avgValue = todayCount > 0 ? todayTotalVolume / todayCount : 0;
                    }
                    <h3>$@avgValue.ToString("N2")</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Filter Section -->
    <div class="card mb-3">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-funnel"></i> Filter Transactions</h5>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-2">
                    <label for="transactionType" class="form-label">Type</label>
                    <select id="transactionType" class="form-select">
                        <option value="">All Types</option>
                        <option value="Transfer" selected="@(filter.TransactionType == "Transfer")">Transfer</option>
                        <option value="Deposit" selected="@(filter.TransactionType == "Deposit")">Deposit</option>
                        <option value="Withdrawal" selected="@(filter.TransactionType == "Withdrawal")">Withdrawal</option>
                        <option value="Fee" selected="@(filter.TransactionType == "Fee")">Fee</option>
                        <option value="Interest" selected="@(filter.TransactionType == "Interest")">Interest</option>
                        <option value="Refund" selected="@(filter.TransactionType == "Refund")">Refund</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label for="status" class="form-label">Status</label>
                    <select id="status" class="form-select">
                        <option value="">All Statuses</option>
                        <option value="Completed" selected="@(filter.Status == "Completed")">Completed</option>
                        <option value="Pending" selected="@(filter.Status == "Pending")">Pending</option>
                        <option value="Processing" selected="@(filter.Status == "Processing")">Processing</option>
                        <option value="Failed" selected="@(filter.Status == "Failed")">Failed</option>
                        <option value="Cancelled" selected="@(filter.Status == "Cancelled")">Cancelled</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label for="reference" class="form-label">Reference</label>
                    <input type="text" id="reference" class="form-control" placeholder="Search reference..." value="@filter.Reference">
                </div>
                <div class="col-md-2">
                    <label for="fromDate" class="form-label">From Date</label>
                    <input type="date" id="fromDate" class="form-control" value="@(filter.FromDate?.ToString("yyyy-MM-dd"))">
                </div>
                <div class="col-md-2">
                    <label for="toDate" class="form-label">To Date</label>
                    <input type="date" id="toDate" class="form-control" value="@(filter.ToDate?.ToString("yyyy-MM-dd"))">
                </div>
                <div class="col-md-2 d-flex align-items-end gap-2">
                    <button type="button" class="btn btn-primary" onclick="applyFilters()">
                        <i class="bi bi-search"></i> Filter
                    </button>
                    <button type="button" class="btn btn-outline-secondary" onclick="clearFilters()">
                        <i class="bi bi-x-lg"></i> Clear
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-list"></i> Transaction History</h5>
            <span class="badge bg-secondary" id="transactionCount">Showing: @Model.Count</span>
        </div>
        <div class="card-body p-0" id="transactionsListContainer">
            @await Html.PartialAsync("_TransactionsList", Model)
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/admin-transactions.min.js"></script>
    <script>
        $(document).ready(function() {
            AdminTransactions.init('@Url.Action("GetTransactionsList", "Transactions", new { area = "Admin" })');
            
            $('#transactionsTable').DataTable({
                "pageLength": 25,
                "order": [[7, "desc"]],
                "language": {
                    "search": "Search transactions:"
                }
            });
        });

        function applyFilters() {
            AdminTransactions.applyFilters();
        }

        function clearFilters() {
            AdminTransactions.clearFilters();
        }
    </script>
}
