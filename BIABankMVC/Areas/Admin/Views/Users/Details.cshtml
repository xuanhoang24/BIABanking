@using BankingSystemMVC.Areas.Admin.Models.ViewModels.Users
@model AdminUserDetailViewModel
@{
    ViewData["Title"] = "Employee Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2><i class="bi bi-person-badge"></i> Employee Details</h2>
            <p class="text-muted">View and manage employee account information</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Employees
            </a>
        </div>
    </div>

    <partial name="_SuccessAlert" />
    <partial name="_ErrorAlert" />
    <partial name="_InfoAlert" />

    <div class="row">
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-person-circle"></i> Profile</h5>
                </div>
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="bi bi-person-circle display-1"></i>
                    </div>
                    <h4>@Model.FirstName @Model.LastName</h4>
                    <p class="text-muted">Employee ID: #@Model.Id</p>
                    
                    <div class="mb-3">
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactive</span>
                        }
                    </div>

                    <div class="d-grid gap-2">
                        <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#resetPasswordModal">
                            <i class="bi bi-key"></i> Reset Password
                        </button>
                        <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#toggleStatusModal">
                            <i class="bi bi-power"></i> @(Model.IsActive ? "Deactivate" : "Activate") Account
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8 mb-3">
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> Account Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">First Name</label>
                            <p class="mb-0 fw-semibold">@Model.FirstName</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Last Name</label>
                            <p class="mb-0 fw-semibold">@Model.LastName</p>
                        </div>
                        <div class="col-md-12 mb-3">
                            <label class="text-muted small">Email Address</label>
                            <p class="mb-0"><i class="bi bi-envelope"></i> @Model.Email</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Last Login</label>
                            <p class="mb-0">@(Model.LastLoginAt?.ToString("MMMM dd, yyyy HH:mm") ?? "Never") UTC</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Account Created</label>
                            <p class="mb-0">@Model.CreatedAt.ToString("MMMM dd, yyyy HH:mm") UTC</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-shield-check"></i> Roles & Permissions</h5>
                </div>
                <div class="card-body">
                    <label class="text-muted small">Assigned Roles</label>
                    <div class="mb-0">
                        @if (Model.Roles.Any())
                        {
                            foreach (var role in Model.Roles)
                            {
                                <span class="badge bg-primary me-1">@role</span>
                            }
                        }
                        else
                        {
                            <p class="text-muted mb-0">No roles assigned</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Reset Password Modal -->
<div class="modal fade" id="resetPasswordModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-warning">
                <h5 class="modal-title"><i class="bi bi-key"></i> Reset Employee Password</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="ResetPassword" method="post">
                <input type="hidden" name="id" value="@Model.Id" />
                <div class="modal-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle"></i> <strong>Warning:</strong> This will reset the employee's password to the default.
                    </div>
                    <p><strong>New Password:</strong> <code>employee</code></p>
                    <p class="mb-0 text-muted">The employee will be required to change this password on their next login.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-warning">Reset Password</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Toggle Status Modal -->
<div class="modal fade" id="toggleStatusModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@(Model.IsActive ? "Deactivate" : "Activate") Employee Account</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="ToggleStatus" method="post">
                <input type="hidden" name="id" value="@Model.Id" />
                <div class="modal-body">
                    <p>Are you sure you want to @(Model.IsActive ? "deactivate" : "activate") this employee account?</p>
                    @if (Model.IsActive)
                    {
                        <p class="text-muted mb-0">The employee will not be able to log in after deactivation.</p>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn @(Model.IsActive ? "btn-danger" : "btn-success")">
                        @(Model.IsActive ? "Deactivate" : "Activate")
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
