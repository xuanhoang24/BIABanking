@using BankingSystemMVC.Models.ViewModels.Accounts
@model AccountDetailViewModel

@{
    ViewData["Title"] = "Account Detail";
}

<div class="page-container">
    <div class="page-header">
        <h1>Account Detail</h1>
        <p>@Model.AccountName</p>
    </div>

    <div class="row mb-4">
        <div class="col-md-8 mb-4 mb-md-0">
            <div class="card h-100">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Account Number</label>
                            <p class="fw-semibold mb-0">@Model.AccountNumber</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Type</label>
                            <p class="fw-semibold mb-0">@Model.AccountType</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Status</label>
                            <p class="fw-semibold mb-0">@Model.Status</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Balance</label>
                            <p class="fw-semibold fs-4 mb-0">@Model.Balance.ToString("C")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-header">
                    <h6 class="mb-0">Actions</h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-controller="Transactions" asp-action="Deposit" asp-route-accountId="@Model.Id" class="btn btn-outline-primary text-start">
                            <i class="bi bi-cash-coin me-2"></i> Deposit
                        </a>
                        <a asp-controller="Transactions" asp-action="Withdraw" asp-route-accountId="@Model.Id" class="btn btn-outline-primary text-start">
                            <i class="bi bi-cash-stack me-2"></i> Withdraw
                        </a>
                        <a asp-controller="Transactions" asp-action="Transfer" asp-route-fromAccountId="@Model.Id" class="btn btn-outline-primary text-start">
                            <i class="bi bi-arrow-left-right me-2"></i> Transfer
                        </a>
                        <a asp-controller="Transactions" asp-action="Payment" asp-route-accountId="@Model.Id" class="btn btn-outline-primary text-start">
                            <i class="bi bi-credit-card me-2"></i> Payment
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Transactions</h5>
            <button class="btn btn-outline-secondary btn-sm" type="button" data-bs-toggle="collapse" data-bs-target="#filterPanel">
                <i class="bi bi-funnel me-1"></i> Filter
            </button>
        </div>
        
        <div class="collapse" id="filterPanel">
            <div class="card-body border-bottom bg-light">
                <form id="filterForm">
                    <div class="row g-3">
                        <div class="col-md-3">
                            <label class="form-label small">Transaction Type</label>
                            <select id="transactionType" class="form-select form-select-sm">
                                <option value="">All Types</option>
                                <option value="Deposit">Deposit</option>
                                <option value="Withdrawal">Withdrawal</option>
                                <option value="Transfer">Transfer</option>
                                <option value="Payment">Payment</option>
                                <option value="Fee">Fee</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label small">From Date</label>
                            <input type="date" id="fromDate" class="form-control form-control-sm" />
                        </div>
                        <div class="col-md-2">
                            <label class="form-label small">To Date</label>
                            <input type="date" id="toDate" class="form-control form-control-sm" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label small">Reference</label>
                            <input type="text" id="reference" class="form-control form-control-sm" 
                                   placeholder="Search by reference..." />
                        </div>
                        <div class="col-md-1 d-flex align-items-end gap-1">
                            <button type="button" class="btn btn-primary btn-sm" onclick="AccountTransactions.applyFilters()">
                                <i class="bi bi-search"></i>
                            </button>
                            <button type="button" class="btn btn-outline-secondary btn-sm" onclick="AccountTransactions.clearFilters()">
                                <i class="bi bi-x-lg"></i>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <div class="card-body p-0" id="transactionsContainer">
            @await Html.PartialAsync("_TransactionsList", Model.RecentTransactions)
        </div>
    </div>

    <a asp-action="Index" class="btn btn-secondary mt-4">Back to Accounts</a>
</div>

@section Scripts {
    <script src="~/js/account-transactions.min.js"></script>
    <script>
        AccountTransactions.init(@Model.Id);
    </script>
}
