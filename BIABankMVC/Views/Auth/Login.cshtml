@using BankingSystemMVC.Models.ViewModels.Auth
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="auth-page">
    <div class="auth-container">
        <div class="auth-card">
            <div class="auth-header">
                <h2>Welcome Back</h2>
                <p class="auth-subtitle">Sign in to access your account</p>
            </div>

            <partial name="_SuccessAlert" />
            <partial name="_ErrorAlert" />
            <partial name="_InfoAlert" />

            <form asp-action="Login" method="post" class="auth-form">
                <div class="form-group">
                    <label asp-for="Email" class="form-label">
                        <i class="bi bi-envelope"></i> Email Address
                    </label>
                    <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="form-label">
                        <i class="bi bi-lock"></i> Password
                    </label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary btn-auth">
                    <i class="bi bi-box-arrow-in-right"></i> Sign In
                </button>
            </form>

            <div class="auth-footer">
                <p class="text-muted">Don't have an account? <a asp-action="Register" class="auth-link">Create Account</a></p>
            </div>
        </div>

        <div class="auth-info">
            <div class="info-item">
                <i class="bi bi-shield-check"></i>
                <span>Bank-level security</span>
            </div>
            <div class="info-item">
                <i class="bi bi-clock"></i>
                <span>24/7 access</span>
            </div>
            <div class="info-item">
                <i class="bi bi-phone"></i>
                <span>Support available</span>
            </div>
        </div>
    </div>
</div>
