@using BankingSystemMVC.Models.ViewModels.Accounts.Transactions
@model DepositViewModel

@{
    ViewData["Title"] = "Deposit";
}

<div class="page-container">
    <div class="page-header">
        <h1><i class="bi bi-arrow-up-circle"></i> Deposit Funds</h1>
        <p class="text-muted">Add money to your account</p>
    </div>

    <partial name="_ErrorAlert" model="null" />

    <div class="card">
        <div class="card-body p-4">
            <form asp-action="Deposit" method="post">
                @Html.AntiForgeryToken()

                <input type="hidden" asp-for="AccountId" />

                <div class="form-group">
                    <label class="form-label"><i class="bi bi-currency-dollar"></i> Amount</label>
                    <input asp-for="Amount" class="form-control" type="number" step="0.01" placeholder="0.00" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="form-label"><i class="bi bi-chat-left-text"></i> Description (Optional)</label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Add a note..."></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="btn-group-form">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-plus-circle"></i> Deposit
                    </button>
                    <a asp-controller="Accounts" asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
