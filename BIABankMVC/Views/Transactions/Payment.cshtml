@using BankingSystemMVC.Models.ViewModels.Accounts.Transactions
@model PaymentViewModel

@{
    ViewData["Title"] = "Payment";
}

<div class="page-container">
    <div class="page-header">
        <h1><i class="bi bi-credit-card"></i> Make Payment</h1>
        <p class="text-muted">Pay a merchant or service provider</p>
    </div>

    <partial name="_ErrorAlert" model="null" />

    <div class="card">
        <div class="card-body p-4">
            <form asp-action="Payment" method="post">
                @Html.AntiForgeryToken()

                <input type="hidden" asp-for="AccountId" />

                <div class="form-group">
                    <label class="form-label"><i class="bi bi-shop"></i> Merchant</label>
                    <input asp-for="Merchant" class="form-control" placeholder="Enter merchant name" />
                    <span asp-validation-for="Merchant" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="form-label"><i class="bi bi-currency-dollar"></i> Amount</label>
                    <input asp-for="Amount" class="form-control" type="number" step="0.01" placeholder="0.00" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>

                <div class="btn-group-form">
                    <button type="submit" class="btn btn-warning">
                        <i class="bi bi-cash"></i> Pay Now
                    </button>
                    <a asp-controller="Accounts" asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
