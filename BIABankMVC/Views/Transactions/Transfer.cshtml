@using BankingSystemMVC.Models.ViewModels.Accounts
@using BankingSystemMVC.Models.ViewModels.Accounts.Transactions
@model TransferPageViewModel

@{
    ViewData["Title"] = "Transfer";
    var accounts = Model.Accounts ?? new List<AccountSummaryViewModel>();
}

<div class="page-container">
    <div class="page-header">
        <h1><i class="bi bi-arrow-left-right"></i> Transfer Funds</h1>
        <p class="text-muted">Send money between your accounts or to another user</p>
    </div>

    <partial name="_ErrorAlert" model="null" />

    <div class="card">
        <div class="card-body p-4">
            <form asp-action="Transfer" method="post">
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <label class="form-label"><i class="bi bi-shuffle"></i> Transfer Type</label>
                    <select asp-for="Transfer.TransferType" class="form-select" id="transferType">
                        <option value="Internal">Between my accounts</option>
                        <option value="External">To another user</option>
                    </select>
                </div>

                <div class="form-group">
                    <label class="form-label"><i class="bi bi-wallet2"></i> From Account</label>
                    <select asp-for="Transfer.FromAccountId" class="form-select" id="fromAccountSelect">
                        <option value="">Select account</option>
                        @foreach (var a in accounts)
                        {
                            <option value="@a.Id">
                                @a.AccountName (@a.AccountNumber) | @a.Balance.ToString("C")
                            </option>
                        }
                    </select>
                    <span asp-validation-for="Transfer.FromAccountId" class="text-danger"></span>
                </div>

                <div id="internalTransferSection" class="form-group">
                    <label class="form-label"><i class="bi bi-wallet"></i> To Account</label>
                    <select asp-for="Transfer.ToAccountId" class="form-select" id="toAccountSelect">
                        <option value="">Select destination account</option>
                        @foreach (var a in accounts)
                        {
                            <option value="@a.Id">
                                @a.AccountName (@a.AccountNumber) | @a.Balance.ToString("C")
                            </option>
                        }
                    </select>
                    <span asp-validation-for="Transfer.ToAccountId" class="text-danger"></span>
                </div>

                <div id="externalTransferSection" class="form-group" style="display:none;">
                    <label class="form-label"><i class="bi bi-credit-card"></i> Destination Account Number</label>
                    <input asp-for="Transfer.ToAccountNumber" class="form-control" placeholder="Enter account number" />
                    <span asp-validation-for="Transfer.ToAccountNumber" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="form-label"><i class="bi bi-currency-dollar"></i> Amount</label>
                    <input asp-for="Transfer.Amount" class="form-control" type="number" step="0.01" placeholder="0.00" />
                    <span asp-validation-for="Transfer.Amount" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="form-label"><i class="bi bi-chat-left-text"></i> Description (Optional)</label>
                    <textarea asp-for="Transfer.Description" class="form-control" rows="3" placeholder="Add a note..."></textarea>
                </div>

                <div class="btn-group-form">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-send"></i> Transfer
                    </button>
                    <a asp-controller="Accounts" asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <environment include="Development">
        <script src="~/js/transfer.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/transfer.min.js" asp-append-version="true"></script>
    </environment>
}
