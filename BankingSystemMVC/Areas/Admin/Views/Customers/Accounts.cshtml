@model List<BankingSystemMVC.Areas.Admin.Models.AccountSummaryViewModel>
@{
    ViewData["Title"] = "Customer Accounts";
    var customer = ViewBag.Customer as BankingSystemMVC.Areas.Admin.Models.CustomerDetailViewModel;
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1><i class="fas fa-credit-card"></i> Customer Accounts</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Customers</a></li>
                    <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@customer.Id">@customer.FirstName @customer.LastName</a></li>
                    <li class="breadcrumb-item active">Accounts</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-12">
            <div class="card bg-light">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h5 class="mb-0">
                                <i class="fas fa-user"></i> @customer.FirstName @customer.LastName
                                <small class="text-muted">(ID: #@customer.Id)</small>
                            </h5>
                            <p class="mb-0 text-muted">@customer.Email</p>
                        </div>
                        <div class="col-md-4 text-end">
                            <a asp-action="Details" asp-route-id="@customer.Id" class="btn btn-outline-primary">
                                <i class="fas fa-arrow-left"></i> Back to Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fas fa-list"></i> Account List</h5>
            <span class="badge bg-light text-dark">Total: @Model.Count</span>
        </div>
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Account Number</th>
                                <th>Account Name</th>
                                <th>Type</th>
                                <th>Status</th>
                                <th>Balance</th>
                                <th>Created Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var account in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@account.AccountNumber</strong>
                                    </td>
                                    <td>@account.AccountName</td>
                                    <td>
                                        @switch (account.AccountType)
                                        {
                                            case "Checking":
                                                <span class="badge bg-primary"><i class="fas fa-money-check"></i> Checking</span>
                                                break;
                                            case "Savings":
                                                <span class="badge bg-success"><i class="fas fa-piggy-bank"></i> Savings</span>
                                                break;
                                            case "BusinessChecking":
                                                <span class="badge bg-info"><i class="fas fa-briefcase"></i> Business</span>
                                                break;
                                            case "CryptoMarket":
                                                <span class="badge bg-warning"><i class="fab fa-bitcoin"></i> Crypto</span>
                                                break;
                                            default:
                                                <span class="badge bg-secondary">@account.AccountType</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        @switch (account.Status)
                                        {
                                            case "Active":
                                                <span class="badge bg-success">Active</span>
                                                break;
                                            case "Frozen":
                                                <span class="badge bg-warning">Frozen</span>
                                                break;
                                            case "Closed":
                                                <span class="badge bg-danger">Closed</span>
                                                break;
                                            case "PendingActivation":
                                                <span class="badge bg-secondary">Pending</span>
                                                break;
                                            default:
                                                <span class="badge bg-secondary">@account.Status</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        <strong class="@(account.Balance >= 0 ? "text-success" : "text-danger")">
                                            $@account.Balance.ToString("N2")
                                        </strong>
                                    </td>
                                    <td>
                                        <small>@account.CreatedAt.ToString("MMM dd, yyyy")</small>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="table-light">
                            <tr>
                                <td colspan="4" class="text-end"><strong>Total Balance:</strong></td>
                                <td colspan="2">
                                    <strong class="text-success">
                                        $@Model.Sum(a => a.Balance).ToString("N2")
                                    </strong>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5 text-muted">
                    <i class="fas fa-credit-card fa-3x mb-3 opacity-50"></i>
                    <h5>No Accounts Found</h5>
                    <p>This customer doesn't have any accounts yet.</p>
                </div>
            }
        </div>
    </div>
</div>
