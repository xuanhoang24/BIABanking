@model BankingSystemMVC.Areas.Admin.Models.CustomerDetailViewModel
@{
    ViewData["Title"] = "Customer Details";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1><i class="fas fa-user"></i> Customer Details</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Customers</a></li>
                    <li class="breadcrumb-item active">@Model.FirstName @Model.LastName</li>
                </ol>
            </nav>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0"><i class="fas fa-user-circle"></i> Profile</h5>
                </div>
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-user-circle fa-5x text-primary"></i>
                    </div>
                    <h4>@Model.FirstName @Model.LastName</h4>
                    <p class="text-muted">Customer ID: #@Model.Id</p>
                    
                    <div class="mb-3">
                        @if (Model.IsKYCVerified)
                        {
                            <span class="badge bg-success"><i class="fas fa-check-circle"></i> KYC Verified</span>
                        }
                        else
                        {
                            <span class="badge bg-warning"><i class="fas fa-clock"></i> KYC Pending</span>
                        }
                        
                        @switch (Model.Status)
                        {
                            case "Active":
                                <span class="badge bg-success">Active</span>
                                break;
                            case "Inactive":
                                <span class="badge bg-secondary">Inactive</span>
                                break;
                            case "Suspended":
                                <span class="badge bg-danger">Suspended</span>
                                break;
                            case "Closed":
                                <span class="badge bg-dark">Closed</span>
                                break;
                        }
                    </div>

                    <div class="d-grid gap-2">
                        <a asp-action="Accounts" asp-route-id="@Model.Id" class="btn btn-success">
                            <i class="fas fa-credit-card"></i> View Accounts
                        </a>
                        @if (User.HasClaim("perm", "transaction.read"))
                        {
                            <a asp-action="Transactions" asp-route-id="@Model.Id" class="btn btn-info">
                                <i class="fas fa-exchange-alt"></i> View Transactions
                            </a>
                        }
                        <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#statusModal">
                            <i class="fas fa-edit"></i> Change Status
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8 mb-3">
            <div class="card mb-3">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0"><i class="fas fa-info-circle"></i> Personal Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Email Address</label>
                            <p class="mb-0"><i class="fas fa-envelope"></i> @Model.Email</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Phone Number</label>
                            <p class="mb-0"><i class="fas fa-phone"></i> @Model.PhoneNumber</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Date of Birth</label>
                            <p class="mb-0"><i class="fas fa-birthday-cake"></i> @Model.DateOfBirth.ToString("MMMM dd, yyyy")</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Age</label>
                            <p class="mb-0">@((DateTime.Now.Year - Model.DateOfBirth.Year)) years old</p>
                        </div>
                        <div class="col-12 mb-3">
                            <label class="text-muted small">Address</label>
                            <p class="mb-0"><i class="fas fa-map-marker-alt"></i> @Model.Address</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0"><i class="fas fa-shield-alt"></i> Security Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Failed Login Attempts</label>
                            <p class="mb-0">
                                @if (Model.FailedLoginAttempts > 0)
                                {
                                    <span class="badge bg-warning">@Model.FailedLoginAttempts</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">0</span>
                                }
                            </p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Account Locked</label>
                            <p class="mb-0">
                                @if (Model.LockedUntil.HasValue && Model.LockedUntil > DateTime.UtcNow)
                                {
                                    <span class="badge bg-danger">Until @Model.LockedUntil.Value.ToString("MMM dd, yyyy hh:mm tt")</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">No</span>
                                }
                            </p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Member Since</label>
                            <p class="mb-0">@Model.CreatedAt.ToString("MMMM dd, yyyy")</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Last Updated</label>
                            <p class="mb-0">@Model.UpdatedAt.ToString("MMMM dd, yyyy")</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0"><i class="fas fa-credit-card"></i> Accounts Summary</h5>
                </div>
                <div class="card-body">
                    @if (Model.Accounts.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Account Number</th>
                                        <th>Type</th>
                                        <th>Status</th>
                                        <th>Balance</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var account in Model.Accounts)
                                    {
                                        <tr>
                                            <td><strong>@account.AccountNumber</strong></td>
                                            <td><span class="badge bg-secondary">@account.AccountType</span></td>
                                            <td>
                                                @switch (account.Status)
                                                {
                                                    case "Active":
                                                        <span class="badge bg-success">Active</span>
                                                        break;
                                                    case "Frozen":
                                                        <span class="badge bg-warning">Frozen</span>
                                                        break;
                                                    case "Closed":
                                                        <span class="badge bg-danger">Closed</span>
                                                        break;
                                                    default:
                                                        <span class="badge bg-secondary">@account.Status</span>
                                                        break;
                                                }
                                            </td>
                                            <td><strong>$@account.Balance.ToString("N2")</strong></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center mb-0">No accounts found</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Status Update Modal -->
<div class="modal fade" id="statusModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Update Customer Status</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="UpdateStatus" method="post">
                <input type="hidden" name="id" value="@Model.Id" />
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Select New Status</label>
                        <select name="status" class="form-select" required>
                            <option value="Active" selected="@(Model.Status == "Active")">Active</option>
                            <option value="Inactive" selected="@(Model.Status == "Inactive")">Inactive</option>
                            <option value="Suspended" selected="@(Model.Status == "Suspended")">Suspended</option>
                            <option value="Closed" selected="@(Model.Status == "Closed")">Closed</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Update Status</button>
                </div>
            </form>
        </div>
    </div>
</div>
