@using BankingSystemMVC.Areas.Admin.Models.ViewModels.Kyc
@using BankingSystemMVC.Models.Kyc
@using BankingSystemMVC.Models.ViewModels.Kyc
@model List<AdminKycPendingViewModel>

@{
    ViewData["Title"] = "KYC Review";
    var pendingList = Model.Where(x => x.Status == KYCStatus.Pending).ToList();
    var underReviewList = Model.Where(x => x.Status == KYCStatus.UnderReview).ToList();
    var totalCount = Model.Count;
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1><i class="fas fa-file-alt"></i> KYC Review</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item active">KYC Review</li>
                </ol>
            </nav>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase mb-1">Total Submissions</h6>
                            <h2 class="mb-0 fw-bold">@totalCount</h2>
                        </div>
                        <div>
                            <i class="fas fa-file-alt fa-3x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase mb-1">Pending Review</h6>
                            <h2 class="mb-0 fw-bold">@pendingList.Count</h2>
                        </div>
                        <div>
                            <i class="fas fa-clock fa-3x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-uppercase mb-1">Under Review</h6>
                            <h2 class="mb-0 fw-bold">@underReviewList.Count</h2>
                        </div>
                        <div>
                            <i class="fas fa-hourglass-half fa-3x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- KYC Submissions -->
    <div class="row">
        <!-- Pending Submissions -->
        <div class="col-lg-6 mb-3">
            <div class="card h-100">
                <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-clock"></i> Pending Submissions
                    </h5>
                    <span class="badge bg-warning">@pendingList.Count</span>
                </div>
                <div class="card-body p-0">
                    @if (!pendingList.Any())
                    {
                        <div class="text-center py-5 text-muted">
                            <i class="fas fa-check-circle fa-3x mb-3 opacity-50"></i>
                            <h5>No Pending Submissions</h5>
                            <p class="mb-0">All KYC documents have been reviewed</p>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Customer</th>
                                        <th>Document Type</th>
                                        <th>Submitted</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in pendingList)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@item.CustomerName</strong>
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary">@item.DocumentType</span>
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    <i class="far fa-clock"></i>
                                                    @item.CreatedAt.ToString("MMM dd, yyyy HH:mm") UTC
                                                </small>
                                            </td>
                                            <td>
                                                <a asp-area="Admin"
                                                   asp-controller="Kyc"
                                                   asp-action="Review"
                                                   asp-route-id="@item.Id"
                                                   class="btn btn-sm btn-primary">
                                                    <i class="fas fa-eye"></i> Review
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Under Review Submissions -->
        <div class="col-lg-6 mb-3">
            <div class="card h-100">
                <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-hourglass-half"></i> Under Review
                    </h5>
                    <span class="badge bg-info">@underReviewList.Count</span>
                </div>
                <div class="card-body p-0">
                    @if (!underReviewList.Any())
                    {
                        <div class="text-center py-5 text-muted">
                            <i class="fas fa-inbox fa-3x mb-3 opacity-50"></i>
                            <h5>No Submissions Under Review</h5>
                            <p class="mb-0">No documents are currently being reviewed</p>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Customer</th>
                                        <th>Document Type</th>
                                        <th>Submitted</th>
                                        <th>Reviewer</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in underReviewList)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@item.CustomerName</strong>
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary">@item.DocumentType</span>
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    <i class="far fa-clock"></i>
                                                    @item.CreatedAt.ToString("MMM dd, yyyy HH:mm") UTC
                                                </small>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.ReviewerName))
                                                {
                                                    <small>
                                                        <i class="fas fa-user text-primary"></i> @item.ReviewerName
                                                    </small>
                                                }
                                                else
                                                {
                                                    <small class="text-muted">-</small>
                                                }
                                            </td>
                                            <td>
                                                <a asp-area="Admin"
                                                   asp-controller="Kyc"
                                                   asp-action="Review"
                                                   asp-route-id="@item.Id"
                                                   class="btn btn-sm btn-primary">
                                                    <i class="fas fa-eye"></i> Review
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        box-shadow: 0 0.125rem 0.5rem rgba(0, 0, 0, 0.1);
        border: 1px solid rgba(0, 0, 0, 0.125);
        transition: transform 0.2s, box-shadow 0.2s;
    }

    .card:hover {
        transform: translateY(-2px);
        box-shadow: 0 0.25rem 1rem rgba(0, 0, 0, 0.15);
    }

    .table-hover tbody tr:hover {
        background-color: rgba(0, 0, 0, 0.02);
    }

    .table th {
        border-top: none;
        font-weight: 600;
        background-color: #f8f9fa;
    }

    .badge {
        font-weight: 500;
        padding: 0.35em 0.65em;
    }

    .opacity-50 {
        opacity: 0.5;
    }
</style>
