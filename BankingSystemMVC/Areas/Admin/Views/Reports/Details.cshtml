@model BankingSystemMVC.Areas.Admin.Models.AdminReportViewModel

@{
    ViewData["Title"] = "Report Details";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Report Details</h2>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to Reports
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    <div class="col-md-8">
        <div class="card mb-4">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Report #@Model.Id</h5>
                    @switch (Model.Status)
                    {
                        case BankingSystemMVC.Areas.Admin.Models.AdminReportStatus.Pending:
                            <span class="badge bg-warning text-dark">Pending</span>
                            break;
                        case BankingSystemMVC.Areas.Admin.Models.AdminReportStatus.UnderReview:
                            <span class="badge bg-info">Under Review</span>
                            break;
                        case BankingSystemMVC.Areas.Admin.Models.AdminReportStatus.Resolved:
                            <span class="badge bg-success">Resolved</span>
                            break;
                        case BankingSystemMVC.Areas.Admin.Models.AdminReportStatus.Closed:
                            <span class="badge bg-secondary">Closed</span>
                            break;
                    }
                </div>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <strong>Customer:</strong>
                    <p>
                        <a asp-controller="Customers" asp-action="Details" asp-route-id="@Model.CustomerId">
                            @Model.CustomerEmail
                        </a>
                    </p>
                </div>

                <div class="mb-3">
                    <strong>Name:</strong>
                    <p>@Model.Name</p>
                </div>

                <div class="mb-3">
                    <strong>Title:</strong>
                    <p>@Model.Title</p>
                </div>

                <div class="mb-3">
                    <strong>Description:</strong>
                    <p class="mt-2">@Model.Description</p>
                </div>

                <hr />

                <div class="row">
                    <div class="col-md-6">
                        <small class="text-muted">
                            <strong>Created:</strong> @Model.CreatedAt.ToLocalTime().ToString("MMMM dd, yyyy 'at' hh:mm tt")
                        </small>
                    </div>
                    <div class="col-md-6">
                        <small class="text-muted">
                            <strong>Last Updated:</strong> @Model.UpdatedAt.ToLocalTime().ToString("MMMM dd, yyyy 'at' hh:mm tt")
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Update Status</h5>
            </div>
            <div class="card-body">
                <form asp-action="UpdateStatus" method="post">
                    <input type="hidden" name="id" value="@Model.Id" />
                    
                    <div class="mb-3">
                        <label class="form-label">Status</label>
                        <select name="status" class="form-select">
                            <option value="1" selected="@(Model.Status == BankingSystemMVC.Areas.Admin.Models.AdminReportStatus.Pending)">Pending</option>
                            <option value="2" selected="@(Model.Status == BankingSystemMVC.Areas.Admin.Models.AdminReportStatus.UnderReview)">Under Review</option>
                            <option value="3" selected="@(Model.Status == BankingSystemMVC.Areas.Admin.Models.AdminReportStatus.Resolved)">Resolved</option>
                            <option value="4" selected="@(Model.Status == BankingSystemMVC.Areas.Admin.Models.AdminReportStatus.Closed)">Closed</option>
                        </select>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">
                        Update Status
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
