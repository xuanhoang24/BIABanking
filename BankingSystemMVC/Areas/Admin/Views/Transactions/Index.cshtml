@using BankingSystemMVC.Areas.Admin.Models
@model List<TransactionListViewModel>
@{
    ViewData["Title"] = "All Transactions";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1><i class="bi bi-arrow-left-right"></i> All Transactions</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item active">Transactions</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h6 class="text-muted">Total Transactions</h6>
                    <h3>@Model.Count</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h6 class="text-muted">Completed</h6>
                    <h3>@Model.Count(t => t.Status == "Completed")</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h6 class="text-muted">Net Flow Today</h6>
                    @{
                        // Convert local "today" to UTC range
                        var todayLocalStart = DateTime.Today;
                        var todayLocalEnd = todayLocalStart.AddDays(1);
                        var todayUtcStart = todayLocalStart.ToUniversalTime();
                        var todayUtcEnd = todayLocalEnd.ToUniversalTime();
                        
                        var todayCompleted = Model.Where(t => t.CreatedAt >= todayUtcStart && t.CreatedAt < todayUtcEnd && t.Status == "Completed");
                        var deposits = todayCompleted.Where(t => t.Type == "Deposit").Sum(t => t.Amount);
                        var withdrawals = todayCompleted.Where(t => t.Type == "Withdrawal").Sum(t => t.Amount);
                        // Only count external transfers (to different customers)
                        var externalTransfers = todayCompleted.Where(t => t.Type == "Transfer" && t.FromCustomerId != t.ToCustomerId).Sum(t => t.Amount);
                        var payments = todayCompleted.Where(t => t.Type == "Fee").Sum(t => t.Amount);
                        var netFlow = deposits - withdrawals - externalTransfers - payments;
                    }
                    <h3>$@netFlow.ToString("N2")</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h6 class="text-muted">Average Transaction Value</h6>
                    @{
                        var todayTransactions = Model.Where(t => t.CreatedAt >= todayUtcStart && t.CreatedAt < todayUtcEnd && t.Status == "Completed");
                        var todayCount = todayTransactions.Count();
                        var todayTotalVolume = todayTransactions.Sum(t => t.Amount);
                        var avgValue = todayCount > 0 ? todayTotalVolume / todayCount : 0;
                    }
                    <h3>$@avgValue.ToString("N2")</h3>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-list"></i> Transaction History</h5>
            <span class="badge bg-secondary">Showing: @Model.Count</span>
        </div>
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0" id="transactionsTable">
                        <thead class="table-light">
                            <tr>
                                <th>Reference</th>
                                <th>Type</th>
                                <th>From</th>
                                <th>To</th>
                                <th>Amount</th>
                                <th>Status</th>
                                <th>Description</th>
                                <th>Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var transaction in Model)
                            {
                                <tr>
                                    <td>
                                        <small class="font-monospace">@transaction.TransactionReference</small>
                                    </td>
                                    <td>
                                        @switch (transaction.Type)
                                        {
                                            case "Transfer":
                                                <span class="badge bg-primary"><i class="bi bi-arrow-left-right"></i> Transfer</span>
                                                break;
                                            case "Deposit":
                                                <span class="badge bg-success"><i class="bi bi-arrow-up"></i> Deposit</span>
                                                break;
                                            case "Withdrawal":
                                                <span class="badge bg-warning"><i class="bi bi-arrow-down"></i> Withdrawal</span>
                                                break;
                                            case "Fee":
                                                <span class="badge bg-danger"><i class="bi bi-currency-dollar"></i> Fee</span>
                                                break;
                                            case "Interest":
                                                <span class="badge bg-secondary"><i class="bi bi-percent"></i> Interest</span>
                                                break;
                                            case "Refund":
                                                <span class="badge bg-secondary"><i class="bi bi-arrow-counterclockwise"></i> Refund</span>
                                                break;
                                            default:
                                                <span class="badge bg-secondary">@transaction.Type</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(transaction.FromCustomerName))
                                        {
                                            <div>
                                                <strong>@transaction.FromCustomerName</strong>
                                            </div>
                                            <small class="font-monospace text-muted">@transaction.FromAccountNumber</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(transaction.ToCustomerName))
                                        {
                                            <div>
                                                <strong>@transaction.ToCustomerName</strong>
                                            </div>
                                            <small class="font-monospace text-muted">@transaction.ToAccountNumber</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <strong class="@(transaction.Amount >= 0 ? "text-success" : "text-danger")">
                                            $@transaction.Amount.ToString("N2")
                                        </strong>
                                    </td>
                                    <td>
                                        @switch (transaction.Status)
                                        {
                                            case "Completed":
                                                <span class="badge bg-success">Completed</span>
                                                break;
                                            case "Pending":
                                                <span class="badge bg-warning">Pending</span>
                                                break;
                                            case "Processing":
                                                <span class="badge bg-info">Processing</span>
                                                break;
                                            case "Failed":
                                                <span class="badge bg-danger">Failed</span>
                                                break;
                                            case "Cancelled":
                                                <span class="badge bg-secondary">Cancelled</span>
                                                break;
                                            default:
                                                <span class="badge bg-secondary">@transaction.Status</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        <small>@transaction.Description</small>
                                    </td>
                                    <td>
                                        <small>@transaction.CreatedAt.ToString("MMM dd, yyyy HH:mm tt")</small>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5 text-muted">
                    <i class="bi bi-arrow-left-right display-3 mb-3 opacity-50"></i>
                    <h5>No Transactions Found</h5>
                    <p>There are no transactions in the system yet.</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#transactionsTable').DataTable({
                "pageLength": 25,
                "order": [[7, "desc"]],
                "language": {
                    "search": "Search transactions:"
                }
            });
        });
    </script>
}
