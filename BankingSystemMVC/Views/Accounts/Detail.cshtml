@model BankingSystemMVC.Models.Accounts.AccountDetailViewModel

@{
    ViewData["Title"] = "Account Detail";
}

<h2>Account Detail</h2>

<table class="table">
    <tr>
        <th>Account Name</th>
        <td>@Model.AccountName</td>
    </tr>
    <tr>
        <th>Account Number</th>
        <td>@Model.AccountNumber</td>
    </tr>
    <tr>
        <th>Type</th>
        <td>@Model.AccountType</td>
    </tr>
    <tr>
        <th>Status</th>
        <td>@Model.Status</td>
    </tr>
    <tr>
        <th>Balance</th>
        <td>@Model.Balance.ToString("C")</td>
    </tr>
</table>
<div class="card mt-4">
    <div class="card-header">
        <h5>Recent Deposits</h5>
    </div>
    <div class="card-body p-0">
        @if (Model.RecentDeposits.Any())
        {
            <table class="table table-striped mb-0">
                <thead>
                    <tr>
                        <th>Amount</th>
                        <th>Description</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var deposit in Model.RecentDeposits)
                    {
                        <tr>
                            <td class="text-success fw-bold">
                                +@deposit.Amount.ToString("C")
                            </td>
                            <td>@deposit.Description</td>
                            <td>@deposit.LocalTime</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="text-center text-muted py-4">
                No recent deposits found
            </div>
        }
    </div>
</div>

<a asp-action="Index" class="btn btn-secondary">Back</a>
