@using BankingSystemMVC.Models.ViewModels.Accounts
@model List<AccountSummaryViewModel>

@{
    ViewData["Title"] = "Accounts";
}

<div class="page-container">
    <partial name="_SuccessAlert" />
    <partial name="_ErrorAlert" />
    <partial name="_InfoAlert" />

    <div class="page-header d-flex justify-content-between align-items-center">
        <div>
            <h1>Accounts</h1>
            <p>Manage your bank accounts</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-controller="Transactions" asp-action="Transfer" class="btn btn-secondary">Transfer</a>
            <a asp-controller="Accounts" asp-action="Create" class="btn btn-primary">Create Account</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Account</th>
                <th>Number</th>
                <th>Type</th>
                <th>Balance</th>
                <th>Status</th>
                <th class="text-end">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var a in Model)
            {
                <tr>
                    <td>@a.AccountName</td>
                    <td>@a.AccountNumber</td>
                    <td>@a.AccountType</td>
                    <td>@a.Balance.ToString("C")</td>
                    <td>@a.Status</td>
                    <td class="text-end">
                        <a asp-controller="Accounts" asp-action="Detail" asp-route-id="@a.Id" class="btn btn-sm btn-primary">
                            Details
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
