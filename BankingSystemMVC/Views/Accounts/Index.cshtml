@using BankingSystemMVC.Models.ViewModels.Accounts
@model List<AccountSummaryViewModel>

@{
    ViewData["Title"] = "Accounts";
}

<div class="page-container">
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-info d-flex align-items-start" role="alert" style="background-color: var(--bg-subtle); border: 1px solid var(--border); color: var(--text);">
            <i class="bi bi-info-circle-fill me-3" style="font-size: 1.25rem; color: var(--text-muted);"></i>
            <div class="flex-grow-1">
                <strong>Notice</strong>
                <p class="mb-0 mt-1">@TempData["ErrorMessage"]</p>
                <a asp-controller="Kyc" asp-action="Upload">Upload KYC Documents</a>
            </div>
            <button type="button" class="btn-close ms-3" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="page-header d-flex justify-content-between align-items-center">
        <div>
            <h1>Accounts</h1>
            <p>Manage your bank accounts</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-controller="Transactions" asp-action="Transfer" class="btn btn-secondary">Transfer</a>
            <a asp-controller="Accounts" asp-action="Create" class="btn btn-primary">Create Account</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Account</th>
                <th>Number</th>
                <th>Type</th>
                <th>Balance</th>
                <th>Status</th>
                <th class="text-end">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var a in Model)
            {
                <tr>
                    <td>@a.AccountName</td>
                    <td>@a.AccountNumber</td>
                    <td>@a.AccountType</td>
                    <td>@a.Balance.ToString("C")</td>
                    <td>@a.Status</td>
                    <td class="text-end">
                        <a asp-controller="Accounts" asp-action="Detail" asp-route-id="@a.Id" class="btn btn-sm btn-primary">
                            Details
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
