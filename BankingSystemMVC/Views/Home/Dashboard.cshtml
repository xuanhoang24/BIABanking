@{
    ViewData["Title"] = "Dashboard";
}

<div class="page-container">
    <div class="page-header">
        <h1>Dashboard</h1>
        <p>Welcome back, <strong>@(User.FindFirst("firstname")?.Value ?? "User")</strong></p>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <i class="bi bi-wallet2 display-4 mb-3"></i>
                    <h5>Accounts</h5>
                    <p class="text-muted">Manage your accounts and balances</p>
                    <a asp-controller="Accounts" asp-action="Index" class="btn btn-primary">
                        <i class="bi bi-arrow-right"></i> View Accounts
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <i class="bi bi-arrow-left-right display-4 mb-3"></i>
                    <h5>Transfer</h5>
                    <p class="text-muted">Send money quickly and securely</p>
                    <a asp-controller="Transactions" asp-action="Transfer" class="btn btn-primary">
                        <i class="bi bi-send"></i> Transfer Funds
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <i class="bi bi-person-circle display-4 mb-3"></i>
                    <h5>Profile</h5>
                    <p class="text-muted">Update your information</p>
                    <a asp-controller="Profile" asp-action="Index" class="btn btn-primary">
                        <i class="bi bi-arrow-right"></i> View Profile
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-controller="Accounts" asp-action="Create" class="btn btn-outline-primary text-start">
                            <i class="bi bi-plus-circle me-2"></i> Create New Account
                        </a>
                        <a asp-controller="Transactions" asp-action="Transfer" class="btn btn-outline-primary text-start">
                            <i class="bi bi-arrow-left-right me-2"></i> Transfer Money
                        </a>
                        <a asp-controller="Reports" asp-action="Create" class="btn btn-outline-primary text-start">
                            <i class="bi bi-chat-left-text me-2"></i> Submit Support Ticket
                        </a>
                        @if (ViewBag.IsKycVerified != true)
                        {
                            <a asp-controller="Kyc" asp-action="Upload" class="btn btn-outline-primary text-start">
                                <i class="bi bi-file-earmark-arrow-up me-2"></i> Upload KYC Document
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Account Summary</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-3">View all your accounts and recent transactions</p>
                    <a asp-controller="Accounts" asp-action="Index" class="btn btn-primary">
                        <i class="bi bi-arrow-right"></i> Go to Accounts
                    </a>
                </div>
            </div>

            <div class="card mt-4">
                <div class="card-header">
                    <h5>Support</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-3">Need help? View or create support tickets</p>
                    <a asp-controller="Reports" asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-chat-dots"></i> My Reports
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
