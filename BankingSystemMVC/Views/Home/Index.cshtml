@{
    ViewData["Title"] = "Home";
}

<div class="hero-section">
    <div class="container">
        <h1>BIABank</h1>
        <p class="text-muted mb-2" style="font-size: 0.9rem;">Business - Integrity - Accountability</p>
        <p>Modern banking, simplified</p>
        @if (User.Identity == null || !User.Identity.IsAuthenticated)
        {
            <div class="mt-4">
                <a asp-controller="Auth" asp-action="Register" class="btn btn-primary btn-lg me-3">Get Started</a>
                <a asp-controller="Auth" asp-action="Login" class="btn btn-light btn-lg">Sign In</a>
            </div>
        }
        else
        {
            <div class="mt-4">
                <a asp-controller="Home" asp-action="Dashboard" class="btn btn-primary btn-lg">Go to Dashboard</a>
            </div>
        }
    </div>
</div>

<div class="container section">
    <div class="section-title">
        <h2>About Us</h2>
        <p>Banking built for the modern world</p>
    </div>
    <div class="row g-4 align-items-center">
        <div class="col-md-6">
            <p>BIABank combines cutting-edge technology with personalized service to deliver exceptional banking experiences. Our commitment to security, innovation, and customer satisfaction has made us a trusted financial partner.</p>
        </div>
        <div class="col-md-6">
            <div class="row g-3">
                <div class="col-6">
                    <div class="stat-card">
                        <span class="stat-number">500K+</span>
                        <span class="stat-label">Customers</span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="stat-card">
                        <span class="stat-number">$5B+</span>
                        <span class="stat-label">Assets</span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="stat-card">
                        <span class="stat-number">24/7</span>
                        <span class="stat-label">Support</span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="stat-card">
                        <span class="stat-number">150+</span>
                        <span class="stat-label">Branches</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="bg-subtle">
    <div class="container section">
        <div class="section-title">
            <h2>Services</h2>
        </div>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="feature-card">
                    <i class="bi bi-bank display-4 mb-3"></i>
                    <h5>Personal Banking</h5>
                    <p>Savings, checking, and investment accounts</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card">
                    <i class="bi bi-briefcase display-4 mb-3"></i>
                    <h5>Business Banking</h5>
                    <p>Tools to help your business grow</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card">
                    <i class="bi bi-shield-lock display-4 mb-3"></i>
                    <h5>Security</h5>
                    <p>Bank-grade encryption and protection</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card">
                    <i class="bi bi-phone display-4 mb-3"></i>
                    <h5>Mobile Banking</h5>
                    <p>Access anywhere, anytime</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card">
                    <i class="bi bi-cash-stack display-4 mb-3"></i>
                    <h5>Loans & Credit</h5>
                    <p>Competitive rates and flexible terms</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card">
                    <i class="bi bi-graph-up-arrow display-4 mb-3"></i>
                    <h5>Investments</h5>
                    <p>Plan for your financial future</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container section">
    <div class="section-title">
        <h2>Why Choose BIABank?</h2>
    </div>
    <div class="row g-4">
        <div class="col-md-3 col-sm-6">
            <div class="feature-card text-center">
                <i class="bi bi-shield-check display-4 mb-3"></i>
                <h6>Bank-Level Security</h6>
                <p>Industry-leading encryption</p>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="feature-card text-center">
                <i class="bi bi-lightning-charge display-4 mb-3"></i>
                <h6>Instant Transfers</h6>
                <p>Real-time transactions</p>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="feature-card text-center">
                <i class="bi bi-headset display-4 mb-3"></i>
                <h6>24/7 Support</h6>
                <p>Always here to help</p>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="feature-card text-center">
                <i class="bi bi-check-circle display-4 mb-3"></i>
                <h6>No Hidden Fees</h6>
                <p>Transparent pricing</p>
            </div>
        </div>
    </div>
</div>

@if (User.Identity == null || !User.Identity.IsAuthenticated)
{
    <div class="container section text-center">
        <h2>Ready to get started?</h2>
        <p class="mb-4">Join thousands of satisfied customers</p>
        <a asp-controller="Auth" asp-action="Register" class="btn btn-primary btn-lg me-3">Open Account</a>
        <a asp-controller="Auth" asp-action="Login" class="btn btn-secondary btn-lg">Sign In</a>
    </div>
}
