@using BankingSystemMVC.Models.Kyc
@using BankingSystemMVC.Models.ViewModels.Kyc
@model KycSubmissionViewModel

<div class="page-container">
    <div class="page-header">
        <h1>KYC Submission</h1>
        <p>Identity verification document</p>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="text-muted">Document Type</label>
                    <p class="fw-semibold">@Model.DocumentType</p>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="text-muted">Status</label>
                    <p>
                        @if (Model.Status == KYCStatus.Approved)
                        {
                            <span class="badge bg-success">Approved</span>
                        }
                        else if (Model.Status == KYCStatus.Pending || Model.Status == KYCStatus.UnderReview)
                        {
                            <span class="badge bg-warning">Pending</span>
                        }
                        else if (Model.Status == KYCStatus.Rejected)
                        {
                            <span class="badge bg-danger">Rejected</span>
                        }
                    </p>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="text-muted">Submitted</label>
                    <p class="fw-semibold">@Model.CreatedAt.ToLocalTime().ToString("MMM dd, yyyy")</p>
                </div>
            </div>

            @if (!string.IsNullOrWhiteSpace(Model.ReviewNotes))
            {
                <div class="alert alert-warning">
                    <strong>Admin Review Note</strong><br />
                    @Model.ReviewNotes
                </div>
            }
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <h5>Uploaded Document</h5>
        </div>
        <div class="card-body">
            @if (Model.OriginalFileName.EndsWith(".pdf", StringComparison.OrdinalIgnoreCase))
            {
                <iframe src="@Url.Action("ViewFile", "Kyc")" width="100%" height="600" style="border:1px solid var(--border)"></iframe>
            }
            else
            {
                <img src="@Url.Action("ViewFile", "Kyc")" class="img-fluid" style="border:1px solid var(--border)" alt="KYC Document" />
            }
        </div>
    </div>

    @if (Model.Status == KYCStatus.Pending || Model.Status == KYCStatus.UnderReview)
    {
        <div class="alert alert-info">
            Your KYC submission is pending review. You cannot upload a new document at this time.
        </div>
    }
    else if (Model.Status == KYCStatus.Rejected)
    {
        <div class="alert alert-danger mb-3">
            Your KYC submission was rejected. Please upload a new document.
        </div>
        <a asp-controller="Kyc" asp-action="Upload" class="btn btn-primary">Upload New KYC</a>
    }
    else if (Model.Status == KYCStatus.Approved)
    {
        <div class="alert alert-success">
            Your identity has been verified successfully.
        </div>
    }

    <a asp-controller="Profile" asp-action="Index" class="btn btn-secondary mt-3">Back to Profile</a>
</div>
