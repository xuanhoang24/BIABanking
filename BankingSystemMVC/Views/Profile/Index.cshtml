@using BankingSystemMVC.Models.ViewModels.Customers
@model CustomerMeViewModel

<h2>My Profile</h2>

<p><strong>Name:</strong> @Model.FirstName @Model.LastName</p>
<p><strong>Email:</strong> @Model.Email</p>
<p><strong>KYC Verified:</strong> @Model.IsKYCVerified</p>

<div class="card mt-3">
    <div class="card-body">
        <h5 class="card-title">Identity Verification</h5>

        @if (Model.IsKYCVerified)
        {
            <span class="badge bg-success">KYC Verified</span>

            <div class="mt-3">
                <a asp-controller="Kyc"
                   asp-action="ViewMyKyc"
                   class="btn btn-outline-secondary">
                    View KYC
                </a>
            </div>
        }
        else
        {
            <p class="text-muted">
                Your identity has not been verified yet.
            </p>

            <a asp-controller="Kyc"
               asp-action="Upload"
               class="btn btn-primary">
                Upload KYC
            </a>

            <a asp-controller="Kyc"
               asp-action="ViewMyKyc"
               class="btn btn-outline-secondary ms-2">
                Check KYC Status
            </a>
        }
    </div>
</div>

<div class="card mt-3">
    <div class="card-body">
        <h5 class="card-title">Support</h5>
        <p class="text-muted">
            Need help or have an issue? Submit a report to our support team.
        </p>
        <a asp-controller="Reports"
           asp-action="Index"
           class="btn btn-outline-primary">
            <i class="bi bi-flag"></i> View My Reports
        </a>
        <a asp-controller="Reports"
           asp-action="Create"
           class="btn btn-primary ms-2">
            <i class="bi bi-plus-circle"></i> Submit New Report
        </a>
    </div>
</div>
