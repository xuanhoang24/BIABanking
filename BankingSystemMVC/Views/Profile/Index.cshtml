@using BankingSystemMVC.Models.ViewModels.Customers
@model CustomerMeViewModel

<div class="page-container">
    <div class="page-header">
        <h1>Profile</h1>
        <p>@Model.FirstName @Model.LastName</p>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="text-muted">Name</label>
                    <p class="fw-semibold">@Model.FirstName @Model.LastName</p>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="text-muted">Email</label>
                    <p class="fw-semibold">@Model.Email</p>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="text-muted">KYC Status</label>
                    <p class="fw-semibold">
                        @if (Model.IsKYCVerified)
                        {
                            <span class="badge bg-success">Verified</span>
                        }
                        else
                        {
                            <span class="badge bg-warning">Not Verified</span>
                        }
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <h5>Identity Verification</h5>
        </div>
        <div class="card-body">
            @if (Model.IsKYCVerified)
            {
                <p class="text-muted mb-3">Your identity has been verified.</p>
                <a asp-controller="Kyc" asp-action="ViewMyKyc" class="btn btn-secondary">View KYC</a>
            }
            else
            {
                <p class="text-muted mb-3">Your identity has not been verified yet.</p>
                <a asp-controller="Kyc" asp-action="Upload" class="btn btn-primary me-2">Upload KYC</a>
                <a asp-controller="Kyc" asp-action="ViewMyKyc" class="btn btn-secondary">Check Status</a>
            }
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5>Support</h5>
        </div>
        <div class="card-body">
            <p class="text-muted mb-3">Need help or have an issue? Submit a report to our support team.</p>
            <a asp-controller="Reports" asp-action="Index" class="btn btn-secondary me-2">View Reports</a>
            <a asp-controller="Reports" asp-action="Create" class="btn btn-primary">Submit Report</a>
        </div>
    </div>
</div>
