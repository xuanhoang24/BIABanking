@using BankingSystemMVC.Models.ViewModels.Reports
@model ReportViewModel

<div class="page-container">
    <partial name="_SuccessAlert" />
    <partial name="_ErrorAlert" />
    <partial name="_InfoAlert" />

    <div class="page-header d-flex justify-content-between align-items-center">
        <div>
            <h1>Report #@Model.Id</h1>
            <p>@Model.Title</p>
        </div>
        <div>
            @if (Model.Status != ReportStatus.Closed)
            {
                <form asp-action="Close" asp-route-id="@Model.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to close this report? This action cannot be undone.');">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Close Report</button>
                </form>
            }
            <a asp-action="Index" class="btn btn-secondary">Back</a>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5>Details</h5>
            @switch (Model.Status)
            {
                case ReportStatus.Pending:
                    <span class="badge bg-warning">Pending</span>
                    break;
                case ReportStatus.UnderReview:
                    <span class="badge bg-secondary">Under Review</span>
                    break;
                case ReportStatus.Resolved:
                    <span class="badge bg-success">Resolved</span>
                    break;
                case ReportStatus.Closed:
                    <span class="badge bg-secondary">Closed</span>
                    break;
            }
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="text-muted">Name</label>
                    <p class="fw-semibold">@Model.Name</p>
                </div>
                <div class="col-md-6">
                    <label class="text-muted">Title</label>
                    <p class="fw-semibold">@Model.Title</p>
                </div>
            </div>

            <div class="mb-3">
                <label class="text-muted">Description</label>
                <p>@Model.Description</p>
            </div>

            <div class="divider"></div>

            <div class="row">
                <div class="col-md-6">
                    <small class="text-muted">Created: @Model.CreatedAt.ToLocalTime().ToString("MMM dd, yyyy hh:mm tt")</small>
                </div>
                <div class="col-md-6">
                    <small class="text-muted">Updated: @Model.UpdatedAt.ToLocalTime().ToString("MMM dd, yyyy hh:mm tt")</small>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5>Messages</h5>
        </div>
        <div class="card-body">
            <div class="mb-4" style="max-height: 400px; overflow-y: auto;">
                @{
                    var messages = (ViewBag.Messages as List<ReportMessageViewModel>);
                }
                @if (messages != null && messages.Any())
                {
                    foreach (var msg in messages.OrderByDescending(m => m.CreatedAt))
                    {
                        var isCustomer = msg.SenderType == MessageSenderType.Customer;
                        
                        <div class="mb-3 @(isCustomer ? "text-end" : "")">
                            <div class="d-inline-block @(isCustomer ? "bg-subtle" : "bg-subtle") p-3 rounded" style="max-width: 70%; border: 1px solid var(--border);">
                                <div class="mb-1">
                                    <strong>@msg.SenderName</strong>
                                    <small class="text-muted">
                                        - @msg.CreatedAt.ToLocalTime().ToString("MMM dd, hh:mm tt")
                                    </small>
                                </div>
                                <div>@msg.Message</div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p class="text-muted text-center">No messages yet</p>
                }
            </div>

            @if (Model.Status == ReportStatus.Resolved || Model.Status == ReportStatus.Closed)
            {
                <div class="alert alert-info mb-0">
                    This report has been @Model.Status.ToString().ToLower(). You can no longer send messages.
                </div>
            }
            else
            {
                <form asp-action="SendMessage" asp-route-id="@Model.Id" method="post">
                    @Html.AntiForgeryToken()
                    <div class="input-group">
                        <input type="text" name="message" class="form-control" placeholder="Type your message..." required maxlength="1000" />
                        <button type="submit" class="btn btn-primary">Send</button>
                    </div>
                </form>
            }
        </div>
    </div>
</div>
