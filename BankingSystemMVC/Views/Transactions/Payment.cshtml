@using BankingSystemMVC.Models.ViewModels.Accounts.Transactions
@model PaymentViewModel

@{
    ViewData["Title"] = "Payment";
}

<div class="form-page">
    <h2>Payment</h2>

    <partial name="_ErrorAlert" model="null" />

    <form asp-action="Payment" method="post">
        @Html.AntiForgeryToken()

        <input type="hidden" asp-for="AccountId" />

        <div class="form-group">
            <label class="form-label">Merchant</label>
            <input asp-for="Merchant" class="form-control" />
            <span asp-validation-for="Merchant" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="form-label">Amount</label>
            <input asp-for="Amount" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-warning">Pay</button>
        <a asp-controller="Accounts" asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
