@using BankingSystemMVC.Models.ViewModels.Accounts.Transactions
@model WithdrawViewModel

@{
    ViewData["Title"] = "Withdraw";
}

<div class="form-page">
    <h2>Withdraw</h2>

    <form asp-action="Withdraw" method="post">
        @Html.AntiForgeryToken()

        <input type="hidden" asp-for="AccountId" />

        <div class="form-group">
            <label class="form-label">Amount</label>
            <input asp-for="Amount" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-danger">Withdraw</button>
        <a asp-controller="Accounts" asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
